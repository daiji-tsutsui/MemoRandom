<%= form_for(post, url: new_post_path) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :memo%>
        <%= f.label :memo, "Upload file", class: "upload_btn" %>
        <%= f.file_field :memo, class: "hidden" %>
        <% if post.memo.present? %>
          <%#= post.memo.url %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
