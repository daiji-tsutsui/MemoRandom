<% flash.each do |type, message| %>
  <div class="alert alert-<%= type %>">
    <% if message.instance_of?(Array) %>
      <%= message.shift %>
      <% if message.length %>
        <ul>
          <% message.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    <% else %>
      <%= message %>
    <% end %>
  </div>
<% end %>
