<% provide(:title, "Top") %>

<%= will_paginate @posts %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div><%= link_to 'New Post', new_post_path %></div>
    <br>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Memo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="no_break"><%= post.name %></td>
            <td class="break"><%= link_to post.memo, post_path(post) %></td>
            <td><%#= link_to 'Edit', edit_post_path(post) %></td>
            <td>
              <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span aria-hidden="true" class="text-danger">&times;</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Post', new_post_path %>
  </div>
  <div class="col-md-1"></div>
</div>

<%= will_paginate @posts %>
