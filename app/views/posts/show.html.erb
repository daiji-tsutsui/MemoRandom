<% provide(:title, "Memo") %>

<%#= render 'posts/lower_pager', post: @post, action: "Edit", action_url: edit_post_path(@post) %>
<div class="row">
  <div class="col-md-2">
    <% if of_current_user?(@post) %>
      <%= link_to "Edit", edit_post_path(@post) %> |
    <% end %>
    <%= link_to "Back", top_path %>
  </div>
  <div class="col-md-8"></div>
  <div class="col-md-2 text-right">
    <% if of_current_user?(@post) %>
      <%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>
<br>

<div class="text-center">
  <p class="text-left">
    <strong>Name:</strong>
    <%= link_to @post.name, @post.memo.url %>
  </p>
  <p class="text-left">
    <strong>Created at:</strong>
    <%= @post.created_at.strftime('%Y-%m-%d %H:%M') %>
  </p>
  <embed src=<%= @post.memo %> width="100%" height="100%"></embed>
</div>
